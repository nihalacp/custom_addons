<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_line_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.line.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page//field[@name='product_template_id']" position="after">
                <field name="image_field" widget="image"/>
            </xpath>
        </field>
    </record>
</odoo>
